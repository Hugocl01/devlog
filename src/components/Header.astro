---
import { ChevronsLeftRightEllipsis } from "@lucide/astro";

const navigation = [
  { name: "Inicio", href: "/" },
  { name: "Blog", href: "/blog" },
  { name: "Etiquetas", href: "/tags" },
  { name: "Acerca de", href: "/about" },
  { name: "Contacto", href: "/contact" },
];
---

<header
  class="sticky top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <nav class="container mx-auto flex h-16 max-w-6xl items-center justify-between px-4">
    <div class="flex items-center gap-8">
      <a href="/" class="flex items-center gap-2 text-lg font-bold">
        <ChevronsLeftRightEllipsis />
        <span>DevLog</span>
      </a>

      <ul class="hidden items-center gap-6 md:flex">
        {
          navigation.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm font-medium text-foreground/60 transition-colors hover:text-foreground"
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden border-t border-border bg-background md:hidden">
    <div class="container mx-auto px-4 py-4">
      <ul class="flex flex-col gap-3">
        {
          navigation.map((item) => (
            <li>
              <a
                href={item.href}
                class="block rounded-lg px-3 py-2 text-sm font-medium text-foreground/60 hover:bg-accent hover:text-foreground transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</header>
